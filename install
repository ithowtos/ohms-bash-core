#!/bin/bash
# Version 2.0.0

inst=install

installcheck $0 $1 || exit 1

function _osinst {
	olog "$0 ${inst}ing $ty ${*}"
	${ty}${inst} ${*} 
	#&&\
	#'olog ${*} successful âœ“
}

function _process {
	olog $0
	ty=`isdebrpm`
	if [ "$1" = "docker" ] ; then installdocker 
	elif [ "$1" = "veracrypt" ] ; then installveracrypt 
	elif [ "$1" = "dbeaver" ] ; then installdbeaver
	elif regexcheck "(kvm|qemu|virt)" $1 ; then
		installkvm
	elif regexcheck "mac|rpm|deb" "$ty" ; then _osinst ${*}
	elif showlinuxflavour | grep -i alpine ; then alpineinstall ${*}
	else errexit "$0 - unknown OS type - $ty - can not install $1" ||\
		exit 1
	fi || exit 1

}

_process ${*} || exit 1

